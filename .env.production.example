# Production Environment Variables Template
# Copy this file to .env.production and fill in actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string for production
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://erp_user:STRONG_PASSWORD_HERE@db.example.com:5432/erp_production?schema=public&sslmode=require"

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="REPLACE_WITH_RANDOM_32_CHAR_STRING"

# Your production domain
NEXTAUTH_URL="https://erp.yourdomain.com"

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV="production"

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
# Sentry DSN for error tracking
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Log level: error, warn, info, debug
LOG_LEVEL="info"

# ============================================
# PERFORMANCE SETTINGS
# ============================================
# Database connection pool size
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Query timeout in milliseconds
DATABASE_QUERY_TIMEOUT=10000

# ============================================
# SECURITY SETTINGS
# ============================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="https://erp.yourdomain.com,https://www.yourdomain.com"

# Rate limiting (requests per minute)
RATE_LIMIT_MAX=100

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false

# ============================================
# EXTERNAL SERVICES (if needed)
# ============================================
# Email service (e.g., SendGrid, AWS SES)
# EMAIL_HOST="smtp.example.com"
# EMAIL_PORT=587
# EMAIL_USER="noreply@yourdomain.com"
# EMAIL_PASSWORD="email_password"
# EMAIL_FROM="ERP System <noreply@yourdomain.com>"

# Cloud storage (e.g., AWS S3)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your_access_key"
# AWS_SECRET_ACCESS_KEY="your_secret_key"
# AWS_S3_BUCKET="erp-attachments"

# ============================================
# BACKUP CONFIGURATION
# ============================================
# S3 bucket for database backups
# BACKUP_S3_BUCKET="erp-database-backups"
# BACKUP_RETENTION_DAYS=30

# ============================================
# DOCKER-SPECIFIC (for docker-compose)
# ============================================
POSTGRES_USER="erp_user"
POSTGRES_PASSWORD="STRONG_DB_PASSWORD_HERE"
POSTGRES_DB="erp_production"

# pgAdmin configuration (optional)
PGADMIN_EMAIL="admin@yourdomain.com"
PGADMIN_PASSWORD="STRONG_PGADMIN_PASSWORD"
